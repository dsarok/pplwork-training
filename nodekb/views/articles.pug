extends template
block title
  link(rel="stylesheet" href="../bower_components/bootstrap/dist/css/bootstrap.css")
  title=article._id
block content
  .container
    h1=article.title
    p written by #{article.author}
    p=article.body
  
    a.btn.btn-primary.rounded-0(href="/article/edit/"+article._id) Edit
    a.btn.btn-danger.rounded-0.delete-article(href="/articel/del/"+article.id) Delete
